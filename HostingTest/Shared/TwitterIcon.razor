@inject IConfiguration Configuration

<a href="@TwitterUrl"
   target="_blank"
   rel="noopener noreferrer">
    <svg xmlns="http://www.w3.org/2000/svg"
         width="@Width"
         height="@Height"
         fill="currentColor"
         class="@Class"
         viewBox="0 0 16 16"
         role="img"
         aria-label="@AriaLabel">
