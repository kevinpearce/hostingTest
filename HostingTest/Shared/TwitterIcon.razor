    </svg>
</a>

@code {
    [Parameter] public string Width { get; set; } = "16";
    [Parameter] public string Height { get; set; } = "16";
    [Parameter] public string Class { get; set; } = "bi bi-twitter-x";
    [Parameter] public string AriaLabel { get; set; } = "Twitter X logo";
    
    private string? TwitterUrl => Configuration["TwitterUrl"];
}
