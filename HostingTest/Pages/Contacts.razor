@page "/contacts"
@using HostingTest.Models
@using Microsoft.Extensions.Options

@inject IOptions<List<Person>> PeopleOptions

<PageTitle>Contacts</PageTitle>

<div class="text-center">
    <h1>Contacts</h1>
    <pre class="pre-padding" style="white-space: pre-wrap;">@Content.ContactsContent.ContactsParagraph</pre>

    <div class="container">
        <div class="row">
            @foreach (var person in _personList)
            {
                <div class="col-md-4">
                    <div class="card mb-4 border-0">
                        
                        <div class="d-flex justify-content-center align-items-center" style="height: 100px;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                            </svg>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@person.Position</h5>
                            <p class="card-text">
                                Name: @person.Name<br/>
                                Email: <a href="mailto:@person.Email">@person.Email</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Person> _personList = null!;

    protected override void OnInitialized()
    {
        _personList = PeopleOptions.Value;
    }
}